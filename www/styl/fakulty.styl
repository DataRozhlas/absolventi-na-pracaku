&.fakulty
  position relative
  overflow hidden
  width 950px
  ol.fakulty
    position relative
    float left
    width 950px
    list-style-type none
    padding 0px
    margin 0px
    li
      padding 0px
      min-height 42px
      position relative
      .name
        position absolute
        width 350px
        text-align right
        top 20px
        transform translate(0, -50%)
      .bar
        position absolute
        left 360px
        height 25px
        top 8px
        border-top-right-radius 4px
        border-bottom-right-radius 4px
        background ColorRed
        min-width 1px
        .value
          position absolute
          left 100%
          width auto
          white-space nowrap
          padding-left 7px
          font-weight 500
          top 4px
          .more
          .less
            color ColorLink
            text-decoration underline
            padding-left 8px
            font-weight normal
            cursor pointer
            position relative
            z-index 3
            &:hover
              text-decoration none
          .less
            display none
      &.soukroma
        .bar
          background ColorBlue

      ol
        position relative
        display none
        left 160px
        list-style-type none
        padding 0px
        margin 0px
        padding-top 40px
        width 500px
        li
          width 590px
          height 40px
          background white
          padding-left 10px
          span.name
            width 180px
            font-size 13px
          .bar
            left 200px
            // background lighten(ColorRed, 30%)
            background rgba(ColorRed, 0.7)
            top 12px
            height 17px
            .value
              font-size 13px
              top 0px

    > li.active
      .more
        display none
      .less
        display inline !important
      > .name
        font-weight bold
      ol
        z-index 2
        display block
  .legend
    right 10px
    li
      &:nth-child(1):before
        background ColorBlue
      &:nth-child(2):before
        background ColorRed
