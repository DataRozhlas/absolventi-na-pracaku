@import colors
@import prefixes
@import 'components/triangle'
body
  margin 0px
  padding 0px
.ig
  @import basics
  @import Slope
.ig
  position relative
  left 20px
  .slope1
  .slope2
    position absolute
    top 0px
    left 0px
    width 300px
    height 400px
    g.line
      opacity 0.1
      .label
        opacity 0
      &.active
        opacity 1
        .label
          opacity 1
    text
      font-family Roboto, sans-serif
    .labels-x
      .label
        font-weight 500
    h3
      position absolute
      bottom -38px
      font-variant small-caps
      font-size 16px
      left 60px
      width 180px
      font-weight 700
      text-align center
  .slope2
    left 300px
    width 530px
