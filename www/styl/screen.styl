@import colors
@import prefixes
@import 'components/triangle'
body
  margin 0px
  padding 0px
.ig
  @import basics
  @import Slope
  @import fakulty
.ig
  position relative
  left 30px
  font-family Roboto, sans-serif
  h1
    font-size 16px
    margin 0px
    font-weight 700
  h2
    font-size 14px
    color #2
    margin 3px 0px 0px 0px
    font-weight 500
  .slope1
  .slope2
    position absolute
    top 50px
    left 0px
    width 330px
    height 400px
    g.line
      opacity 0.1
      .label
        opacity 0
      &.active
        opacity 1
        .label
          opacity 1
    text
      font-family Roboto, sans-serif
    .labels-x
      .label
        font-weight 500
    h3
      position absolute
      bottom -38px
      font-variant small-caps
      font-size 16px
      left 60px
      width 180px
      font-weight 700
      text-align center
  .slope2
    left 360px
    width 530px
  &.bar-chart-container
    left 0px
  ol.bar-chart
    list-style-type none
    margin 0px
    padding 0px
    width 610px
    li
      padding 0px
      margin 0px
      float left
      width (100% / 7)
      height 400px
      position relative
      .title
        position absolute
        top 290px
        display block
        width 100%
        text-align center
        font-weight bold
      .bar-nezamestnani
        position absolute
        bottom 120px
        left 16%
        width (100% - 2 * @left)
        background ColorRed
        border-top-right-radius 3px
        border-top-left-radius 3px
        .value
          display block
          width 100%
          text-align center
          font-weight 500
          color white
          margin-top 7px
          span
            font-weight 300
      .boxes-absolventi
        position absolute
        top 340px
        left 15px
        width (100% - 2 * 16%)
        div
          width 6px
          height 6px
          margin 1px
          border 1px solid #003366
          float left
        span.value
          display block
          float left
          width 100%
          text-align center
          margin-top 8px
          font-weight 500
          span
            font-weight normal
      &:nth-child(1)
      &:nth-child(2)
        .bar-nezamestnani
          background #003366
        .boxes-absolventi div
          border-color #003366
          background lighten(#003366, 91%)
      &:nth-child(3)
      &:nth-child(4)
      &:nth-child(5)
        .bar-nezamestnani
          background #ab0000
        .boxes-absolventi div
          border-color #ab0000
          background lighten(#ab0000, 91%)
      &:nth-child(6)
      &:nth-child(7)
        .bar-nezamestnani
          background #732a38
        .boxes-absolventi div
          border-color #732a38
          background lighten(#732a38, 91%)

      &:nth-child(3)
      &:nth-child(4)
      &:nth-child(5)
      &:nth-child(6)
        .title
          top 299px
  ul.legend
    position absolute
    top 5px
    right 10px
    list-style-type none
    padding 0px
    margin 0px
    li
      float left
      position relative
      clear both
      margin-bottom 4px
      &:before
        content ""
        position absolute
        top 5px
        left -21px
        width 9px
        height 9px
        background red
      &:nth-child(1):before
        background #003366
      &:nth-child(2):before
        background #ab0000
      &:nth-child(3):before
        background #732a38


